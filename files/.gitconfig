[alias]
        last = log -1 --stat
        cp = cherry-pick
        co = checkout
        cl = clone
        ct = commit
        st = status -sb
        s = status
        br = branch
        unstage = reset HEAD --
        dc = diff --cached
        d = diff 
        ds = diff --staged
        tree = log --decorate --pretty=format:"%C(yellow)%h\\ %C(green)%ad%C(cyan)%d\\ %Creset%s%Cblue\\ [%cn]" --date=short --abbrev-commit --graph --all
        ls = log --decorate --pretty=format:"%C(yellow)%h\\ %C(green)%ad%C(cyan)%d\\ %Creset%s%Cblue\\ [%cn]" --date=short
        ll = log --decorate --pretty=format:"%C(yellow)%h\\ %C(green)%ad%C(cyan)%d\\ %Creset%s%Cblue\\ [%cn]" --date=short --numstat
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
        ri = rebase --interactive
	pr = pull --rebase
	fe = fetch --prune
